@model List<KategoriModel>
@{
    ViewData["Title"] = "Kategori Listele";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
            <a class="btn btn-primary btn-sm mb-2" href="/Kategori/Ekle">Yeni Kategori Kaydet</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Adı</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Aktif</th>
                        <th scope="col">Oluşturma Tarih</th>
                        <th scope="col">Yorum Sayisi</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kategori in Model)
                    {
                        <tr>
                            <th scope="row">@kategori.Id</th>
                            <td>@kategori.Ad</td>
                            <td>@kategori.Aciklama</td>
                            <td>@kategori.AktifMiDisplay</td>
                            <td>@kategori.OlusturmaTarih</td>
                            <td>@kategori.YorumSayısı</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Sil" asp-route-id="@kategori.Id">Sil</a>
                                <a class="btn btn-primary btn-sm" asp-action="Duzenle" asp-route-id="@kategori.Id" >Düzenle</a>
                                <a class="btn btn-primary btn-sm" asp-action="Detay" asp-route-id="@kategori.Id">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>