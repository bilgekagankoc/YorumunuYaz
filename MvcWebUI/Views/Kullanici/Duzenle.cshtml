@model KullaniciModel
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}
<div class="container login-page">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>
            <form asp-action="Duzenle" asp-action-id=@Model.Id>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="form-outline mb-4">
                    <input asp-for="KullaniciAdi" type="text" id="KullaniciAdi" class="form-control" />
                    <label asp-for="KullaniciAdi" class="form-label" for="KullaniciAdi"></label>
                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <input asp-for="ePosta" type="text" id="ePosta" class="form-control" />
                    <label asp-for="ePosta" class="form-label" for="ePosta"></label>
                    <span asp-validation-for="ePosta" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <select asp-for="RolId" class="form-control" id="RolId" asp-items="ViewBag.RolId">
                        <option value="">-- Rol Seçiniz --</option>
                    </select>
                    <label asp-for="RolId" class="form-label" for="RolId"></label>
                    <span asp-validation-for="RolId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-4" value="Duzenle">Düzenle</button>
            </form>
        </div>
    </div>
</div>

